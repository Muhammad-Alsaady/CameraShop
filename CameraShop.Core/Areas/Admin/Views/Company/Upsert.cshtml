@model CameraShop.Models.Models.Company
@{
    ViewData["Title"] = "Upsert";
    var title = "Add Company";
}

<h1>Upsert</h1>

<form method="post" asp-action="Upsert">
    <input type="hidden" asp-for="Id" />
    <div class="border row p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if(Model.Id != 0)
        {
            //Edit Partial View
            title = "Edit Company";
        }
        <h2 class="text-primary">@title</h2>
    </div>
    <div class="row border p-3 form-group">
        <div class="form-group">
            <div class="col-4">
                <label asp-for="Name" class="form-label mt-4"></label>
            </div>
            <div class="col-8">
                <input asp-for="Name" type="text" class="form-control" placeholder="Category">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-4">
                <label asp-for="Address" class="form-label mt-4"></label>
            </div>
            <div class="col-8">
                <input asp-for="Address" type="text" class="form-control" placeholder="Address">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
             <div class="col-4">
                <label asp-for="City" class="form-label mt-4"></label>
            </div>
            <div class="col-8">
                <input asp-for="City" type="text" class="form-control" placeholder="City">
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="col-4">
                <label asp-for="PhoneNumber" class="form-label mt-4"></label>
            </div>
            <div class="col-8">
                <input asp-for="PhoneNumber" type="text" class="form-control" >
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="col-4">
                <label asp-for="PostalCode" class="form-label mt-4"></label>
            </div>
            <div class="col-8">
                <input asp-for="PostalCode" type="text" class="form-control" >
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
            <div class="col-4">
                <label asp-for="isAuthorizedCompany" class="form-label mt-4"></label>
            </div>
            <div class="col-8">
                <input asp-for="isAuthorizedCompany" type="checkbox"  >
                <span asp-validation-for="isAuthorizedCompany" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="mt-4">
                @if (Model.Id != 0)
                {
                    <partial name="_EditAndBackToListButtons.cshtml" model="Model.Id" />
                }
                else
                {
                    <partial name="_CreatAndBackToListButtons.cshtml" />

                }
            </div>
        </div>
    </div>
</form>